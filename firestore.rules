rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Logged-in users can read their own profile.
    // They can create their profile and update their displayName and photoURL.
    // Email is set on creation and cannot be changed.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'updatedAt']);
    }
  }
}
